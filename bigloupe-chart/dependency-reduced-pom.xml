<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bigloupe-pom</artifactId>
    <groupId>org.bigloupe</groupId>
    <version>1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>bigloupe-chart</artifactId>
  <name>BigLoupe Chart</name>
  <version>0.1</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>**/*.xml</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>**/*.properties</exclude>
        </excludes>
      </resource>
    </resources>
    <filters>
      <filter>src/main/resources/database.properties</filter>
    </filters>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.14</version>
        <configuration>
          <reuseForks>false</reuseForks>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>h2</id>
      <properties>
        <chart.jdbc.artifactId>h2</chart.jdbc.artifactId>
        <chart.jdbc.driverClassName>org.h2.Driver</chart.jdbc.driverClassName>
        <chart.hibernate.dialect>org.hibernate.dialect.H2Dialect</chart.hibernate.dialect>
        <chart.jdbc.groupId>com.h2database</chart.jdbc.groupId>
        <chart.jdbc.url>jdbc:h2:file:database/bigloupe-chart</chart.jdbc.url>
        <chart.jdbc.type>h2</chart.jdbc.type>
        <chart.jdbc.version>1.3.168</chart.jdbc.version>
        <chart.jdbc.username>sa</chart.jdbc.username>
      </properties>
    </profile>
    <profile>
      <id>standalone</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.4</version>
            <executions>
              <execution>
                <id>make-assembly</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/war.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/war.xml</descriptor>
              </descriptors>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                  <createDependencyReducedPom>true</createDependencyReducedPom>
                  <transformers>
                    <transformer>
                      <resource>META-INF/spring.handlers</resource>
                    </transformer>
                    <transformer>
                      <resource>META-INF/spring.schemas</resource>
                    </transformer>
                    <transformer>
                      <mainClass>org.bigloupe.server.chart.MetricsServer</mainClass>
                    </transformer>
                  </transformers>
                  <artifactSet>
                    <excludes>
                      <exclude>org.apache.tiles:*</exclude>
                      <exclude>org.aspectj:*</exclude>
                      <exclude>cglib:*</exclude>
                      <exclude>com.fasterxml:jackson-module-hibernate:*</exclude>
                      <exclude>com.google.zxing:*</exclude>
                      <exclude>com.googlecode:*</exclude>
                      <exclude>commons-digester:commons-digester:*</exclude>
                      <exclude>commons-codec:commons-codec:*</exclude>
                      <exclude>javassist:*</exclude>
                      <exclude>javax.transaction:*</exclude>
                      <exclude>javax.validation:*</exclude>
                      <exclude>junit:*</exclude>
                      <exclude>net:*</exclude>
                      <exclude>org.codehaus.jackson:*</exclude>
                      <exclude>org.hamcrest:*</exclude>
                      <exclude>org.springframework.security:*</exclude>
                      <exclude>taglibs:*</exclude>
                      <exclude>com.google.code.findbugs:*</exclude>
                    </excludes>
                  </artifactSet>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <properties>
        <chart.jdbc.artifactId>h2</chart.jdbc.artifactId>
        <chart.jdbc.driverClassName>org.h2.Driver</chart.jdbc.driverClassName>
        <chart.hibernate.dialect>org.hibernate.dialect.H2Dialect</chart.hibernate.dialect>
        <chart.jdbc.groupId>com.h2database</chart.jdbc.groupId>
        <chart.jdbc.url>jdbc:h2:file:database/bigloupe-chart</chart.jdbc.url>
        <chart.jdbc.type>h2</chart.jdbc.type>
        <chart.jdbc.version>1.3.168</chart.jdbc.version>
        <chart.jdbc.username>sa</chart.jdbc.username>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>javax.validation</groupId>
      <artifactId>validation-api</artifactId>
      <version>1.0.0.GA</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>cglib</groupId>
      <artifactId>cglib-nodep</artifactId>
      <version>2.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.transaction</groupId>
      <artifactId>jta</artifactId>
      <version>1.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.foursquare</groupId>
      <artifactId>fongo</artifactId>
      <version>1.0.5</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>mockito-core</artifactId>
          <groupId>org.mockito</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <version>3.1.2.RELEASE</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjrt</artifactId>
      <version>1.6.12</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjweaver</artifactId>
      <version>1.6.12</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <hawtio.version>1.0</hawtio.version>
  </properties>
</project>

